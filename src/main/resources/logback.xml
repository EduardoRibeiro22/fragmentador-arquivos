<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd/MM/yyyy HH:mm:ss} %highlight(%-5level) %red(%logger) - %msg%n</pattern>
        </encoder>
    </appender>
        <property name="LOG_DIR" value="C:/Logs"/>
    <appender name="FileOut" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/fragmentador.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{dd/MM/yyyy HH:mm:ss} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.algaworks.arquivos.fragmentador" level="TRACE"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FileOut"/>
    </root>
</configuration>